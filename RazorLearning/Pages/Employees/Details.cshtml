@page "{id:event}"

<!--
We can use constrains here
    :int, min max, range, alpha, custom
-->

@model RazorLearning.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Details";

    var imagePath = "~/Images/" + Model.Employee.Image;
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@imagePath" asp-append-version="true" />

                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>BirthDate: @Model.Employee.BirthDate</h4>
                <h4>Departament: @Model.Employee.Dept</h4>

                <div class="card-footer text-center">
                    <a asp-page="index" class="btn btn-primary m-1">Back</a>
                    <a href="#" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div> 

        </div>
    </div>

</div>
